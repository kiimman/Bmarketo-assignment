<header>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
    {
        <div class="container">
            <div class="logo"><img src="images/logo.svg" alt="">bmerketo</div>
            <nav id="menu" class="menu-links">
                <a class="link" asp-controller="Products" asp-action="Index">Manage Products</a>
                <a class="link" asp-controller="Products" asp-action="GetAllUsers">Manage Users</a>
                <a class="link" asp-controller="Products" asp-action="GetAllContacts">Manage Contacts</a>
                <nav class="menu-icons">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="link">@User.Identity.Name</a>
                        <a class="link" asp-controller="Login" asp-action="Logout">Logout</a>
                    }
                    else
                    {
                        <a class="link" asp-controller="Login" asp-action="Index">Login</a>
                    }

                </nav>
                <div class="toggle">
                    <button class="btn-toggle btn-outline-white" data-option="toggle" data-target="#menu">
                        <i id="icon" class="fa-regular fa-bars"></i>
                    </button>
                </div>
        </div>
    }
    else
    {
        <div class="container">
            <div class="logo"><img src="images/logo.svg" alt="">bmerketo</div>
            <nav id="menu" class="menu-links">
                <a class="link" asp-controller="Home" asp-action="Index">PRODUCTS</a>
                <a class="link" asp-controller="Contacts" asp-action="Index">CONTACT</a>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a class="link" asp-controller="Register" asp-action="Index">REGISTER</a>
                }
            </nav>
            <nav class="menu-icons">
                @*            <a class="link" asp-controller="Products" asp-action="Search"><i class="fa-regular fa-search"></i></a>
            *@            @if (User.Identity.IsAuthenticated)
                {
                    <a class="link">@User.Identity.Name</a>
                    @*<a class="link" asp-controller="Cart" asp-action="Index"><i class="fa-solid fa-cart-shopping"></i></a>*@
                    <a class="link" asp-controller="Login" asp-action="Logout">Logout</a>
                }
                else
                {
                    <a class="link" asp-controller="Login" asp-action="Index">Login</a>
                }

            </nav>
            <div class="toggle">
                <button class="btn-toggle btn-outline-white" data-option="toggle" data-target="#menu">
                    <i id="icon" class="fa-regular fa-bars"></i>
                </button>
            </div>
        </div>
    }

</header>